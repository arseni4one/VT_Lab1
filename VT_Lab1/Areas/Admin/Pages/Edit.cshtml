@page "{id:int}"
@model VT_Lab1.Areas.Admin.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Tile</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Tile.TileId" />
            <div class="form-group">
                <label asp-for="Tile.TileName" class="control-label"></label>
                <input asp-for="Tile.TileName" class="form-control" />
                <span asp-validation-for="Tile.TileName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tile.Description" class="control-label"></label>
                <input asp-for="Tile.Description" class="form-control" />
                <span asp-validation-for="Tile.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tile.Size" class="control-label"></label>
                <input asp-for="Tile.Size" class="form-control" />
                <span asp-validation-for="Tile.Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                @if (!string.IsNullOrEmpty(Model.Tile.Image))
                {
                    <img src=~/Images/@Model.Tile.Image
                         alt="NoSuchFile" width="150" />
                }
                else
                {
                    <h4>Файл изображения не задан</h4>
                }
                <div class="custom-file mt-3">
                    <input type="file" class="custom-file-input"
                           asp-for="Image" id="customFile">
                    <label class="custom-file-label" for="customFile">
                        Выберите файл изображения
                    </label>
                </div>

            </div>
            <div class="form-group">
                <label asp-for="Tile.TileGroupId" class="control-label"></label>
                <select asp-for="Tile.TileGroupId" class="form-control" asp-items="ViewBag.TileGroupId"></select>
                <span asp-validation-for="Tile.TileGroupId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts{
    <script src="~/bs-custom-file-input/dist/bs-custom-file-input.js"></script>
    <script>bsCustomFileInput.init();</script>
}