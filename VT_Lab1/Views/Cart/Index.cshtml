@{ }

@model IEnumerable<VT_Lab1.Models.CartItem>

@{ ViewData["Tittle"] = "Index";
                /*Layout = "~/Views/Shared/_Layout.cshtml";*/ }

<h1>Корзина</h1>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        <img src="~/Images/@item.tilee.Image" alt="No image" width="100" />
    </td>
    <td>
        @Html.DisplayFor(m => item.tilee.TileName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Quantity)
    </td>
    <td>
        <a asp-controller="Cart" 
           asp-action="Delete"
           asp-route-id="@item.tilee.TileId"
           class="btn btn-outline-danger">
            <i class="fas fa-trash-alt"></i>
        </a>
    </td>
</tr>}
    </tbody>
</table>

